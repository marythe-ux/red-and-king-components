{
  "source": ["design-tokens.json"],
  "platforms": {
    "json-flat": {
      "transformGroup": "js",
      "buildPath": "src/styles/",
      "files": [
        {
          "destination": "cssVariables.json",
          "format": "json/flat"
        }
      ],
      "transforms": [
        "attribute/cti",
        "calc/px",
        "color/hex",
        "name/cti/camel",
        "size/px",
        "size/rem",
        "typography"
      ]
    }
  }
}
